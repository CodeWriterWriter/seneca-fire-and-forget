{
  "name": "seneca-fire-and-forget",
  "version": "1.0.0",
  "description": "A seneca plugin that allows you to fire and act that you don't expect/want a reply for",
  "main": "index.js",
  "scripts": {
    "test": "lab -v ./test/*.test.js -m 4000",
    "coverage": "lab ./test/*test.js -r lcov -o coverage/lcov.info -r html -o coverage/index.html",
    "publish-coverage":  "coveralls < coverage/lcov.info",
    "lint": "lab -dL"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/thekemkid/seneca-fire-and-forget.git"
  },
  "keywords": [
    "seneca",
    "fire",
    "forget",
    "single-use"
  ],
  "engines": {
    "node": ">=4.0.0"
  },
  "author": "Glen Keane (https://github.com/thekemkid)",
  "contributors": [
    "Wyatt Preul (https://github.com/geek)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thekemkid/seneca-fire-and-forget/issues"
  },
  "homepage": "https://github.com/thekemkid/seneca-fire-and-forget#readme",
  "devDependencies": {
    "code": "^2.1.0",
    "coveralls": "^2.11.6",
    "eslint-config-seneca": "^1.1.2",
    "eslint-plugin-hapi": "^4.0.0",
    "eslint-plugin-standard": "^1.3.1",
    "lab": "^8.0.1",
    "pre-commit": "^1.1.2",
    "seneca": "^1.0.0"
  },
  "pre-commit": [
    "test",
    "lint"
  ]
}
